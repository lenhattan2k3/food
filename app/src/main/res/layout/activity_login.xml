<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_intro"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo -->

    <!-- Tên người dùng -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="375dp"
        android:layout_height="217dp"
        app:srcCompat="@drawable/pop_2" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:hint="Tên người dùng"
        android:padding="12dp"
        android:textColorHint="@color/black" />

    <!-- Mật khẩu -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColorHint="@color/black" />

    <!-- Nút đăng nhập -->

    <!-- Đăng ký tài khoản -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_a"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:padding="12dp"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="@android:color/black" />

    <!-- Danh sách sản phẩm điện thoại -->

    <!-- Địa chỉ nhận hàng -->

    <Button
        android:id="@+id/registerButton"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:padding="12dp"
        android:text="Đăng ký "
        android:textAllCaps="false"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:scrollbars="horizontal">

        <!-- Sản phẩm 1 -->

        <!-- Sản phẩm 2 -->

        <!-- Sản phẩm 3 -->

        <LinearLayout
            android:layout_width="106dp"
            android:layout_height="85dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_c"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                app:srcCompat="@drawable/cat_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PIZA"
                android:textColor="@color/black"

                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$799"
                android:textColor="#1A1B20"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="101dp"
            android:layout_height="88dp"
            android:background="@drawable/ic_b">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal|top"
                app:srcCompat="@drawable/pop_2" />

            <!-- LinearLayout để chứa cả hai TextView -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hamberger"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="20$"
                    android:textColor="#1A1B20"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="88dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_c"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- LinearLayout để chứa TextView HotDog và 15$ -->

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="63dp"
                android:layout_height="46dp"
                app:srcCompat="@drawable/cat_3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="HotDog"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="15$"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
           />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="329dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/widget_edittext_dark"
            android:hint="Nhập địa chỉ nhận hàng"
            android:padding="12dp"
            android:textColorHint="@color/black" />

    </LinearLayout>

</LinearLayout>
